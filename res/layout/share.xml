<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="4">
    
    
    <RelativeLayout 
	android:orientation="vertical" 
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content"
	android:gravity="center_vertical"
  	>
    <View android:background="#ff666666" android:layout_width="fill_parent" android:layout_height="0.6dip" />
    <RelativeLayout 
    	android:orientation="horizontal" 
    	android:id="@+id/AppAwareHeader" 
    	android:background="@drawable/gray_gradient" 
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content"
    	android:gravity="center_vertical"
    	>
        <TextView android:textSize="25.0sp" 
	        android:textStyle="bold" 
	        android:textColor="#ffffffff" 
	        android:id="@+id/TextViewAppName" 
	        android:padding="2.0sp" 
	        android:layout_width="wrap_content" 
	        android:layout_height="wrap_content" 
	        android:layout_marginLeft="2.0sp" 
	        android:text="分享吧"
         /> 
        <TextView 
        	android:textSize="14.0sp" 
       	 	android:textColor="#ffffffff" 
       	 	android:id="@+id/TextViewVersion" 
       	 	android:layout_width="wrap_content" 
       	 	android:layout_height="wrap_content" 
       	 	android:text="Just Share it.." 
       	 	android:layout_toRightOf="@id/TextViewAppName" 
       	 	android:layout_alignBaseline="@id/TextViewAppName"
       	 />
       	 
         <Button 
       		android:id="@+id/Button01"
       		android:layout_width="50dip"
			android:layout_height="36dip"
       		android:text="分享"
       		android:layout_alignParentRight="true"
       		android:background="@drawable/titlebutton_bg"
       		>
       	</Button>
    </RelativeLayout>
    <View android:id="@+id/ViewBorderMain" android:background="#ff456028" android:layout_width="fill_parent" android:layout_height="1.0sp" android:layout_weight="0.0" />
</RelativeLayout>
    </LinearLayout>
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="2">
    
    <LinearLayout 
  			android:orientation="vertical" 
  			android:layout_width="fill_parent"
  			android:layout_height="fill_parent"
  			android:layout_centerInParent="true"
  		>
  		<ImageView
  		    android:id="@+id/share_image_view" 
  			android:layout_width="wrap_content"
  			android:layout_height="wrap_content"
  			android:layout_gravity="center"
  		></ImageView>
  		
  		</LinearLayout>
	   
    
    </LinearLayout>
    <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="3">
    
    <LinearLayout 
  			android:orientation="vertical" 
  			android:layout_width="fill_parent" 
  			android:layout_height="fill_parent"
  			
  		>
        <EditText android:text="EditText" android:layout_width="fill_parent" android:id="@+id/share_content" android:layout_height="fill_parent" android:scrollbars="vertical" android:hint="说点什么吧..."></EditText>
    	</LinearLayout>
    
    </LinearLayout>
    


</LinearLayout>
