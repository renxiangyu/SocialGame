<?xml version="1.0" encoding="utf-8"?>
<!-- 动画帧集合对象-->
<animation-list       
    xmlns:android="http://schemas.android.com/apk/res/android"     
    android:oneshot="false">  
    
<!--动画帧对象 android:duration表示每帧动画显示的时间,放在drawable下的动画图片不能太大,否则会内存爆掉-->    
<item android:drawable="@drawable/a3_1"   android:duration="180"/> 
<item android:drawable="@drawable/a3_2" android:duration="180"/>     
<item android:drawable="@drawable/a3_3" android:duration="180"/>    
</animation-list>
